---
import { Image } from 'astro:assets';
import Button from "./Button.astro"
const sectionStyles = `landing-section bg-purple h-screen w-screen text-center overflow-hidden overflow-y-hidden relative`;

import heroLogo from '../assets/hero-logo.png';
import heroLogoMobile from '../assets/hero-logo-mobile.png';
import heroWoman from '../assets/hero-woman.png';
---

<section
  class={sectionStyles}
  data-header-color={`purple`}
  id='inicio'
>
  <!-- Desktop Layout -->
<div class="hidden lg:flex justify-between items-center h-full px-16 pt-32 z-30 relative">
  <!-- Left content -->
  <div class="flex flex-col w-[50vw] items-start max-w-[50vw] space-y-6">
    <h2 class="text-apple text-6xl font-bold uppercase">PRIMER FORO</h2>

    <Image
        src={heroLogo}
        alt="Logo habitando mi menopausia"
        class="w-full max-w-md 2xl:max-w-xl"
        loading="eager"       
        fetchpriority="high"  
        widths={[400, 600, 800]} 
        sizes="(max-width: 1536px) 50vw, 800px" 
        format="webp"        
      />

    <!-- Texto y botón alineados -->
    <div class="flex items-start gap-4">
      <!-- Texto -->
      <div class="space-y-2 flex flex-col items-start">
        <p class="text-3xl font-bold text-apple">
          SÁBADO 18 OCTUBRE 2025
        </p>
        <p class="text-white text-2xl">Día Mundial de la Menopausia</p>
      </div>

      <!-- Botón alineado arriba -->
      <div class="pt-1">
        <Button href="#registro" label="QUIERO ASISTIR" />
      </div>
    </div>

    <!-- Sede -->
    <p class="text-md text-white">
      <strong class="text-[#C0EA6A]">SEDE:</strong>
      <span class="font-bold">Museo Memoria y Tolerancia, CDMX.</span>
    </p>
  </div>

  <!-- Right image -->
  <div class="absolute bottom-0 right-0 max-w-2xl md:w-[30vw] lg:w-[40vw]">
    <Image
        src={heroWoman}
        alt="Mujer feliz"
        class="w-full object-contain"
        loading="eager"      
        fetchpriority="high" 
        widths={[400, 600, 800, 1024]}
        sizes="(max-width: 768px) 30vw, 40vw"
        format="webp"         
      />
  </div>
</div>


  <!-- Mobile Layout -->
  <div class="lg:hidden flex flex-col items-center text-center px-6 pt-28  z-30 relative   h-full">
    <h2 class="text-white text-2xl font-bold uppercase">PRIMER FORO</h2>
    <Image 
      src={heroLogoMobile} 
      alt="Logo habitando mi menopausia" 
      class="w-[220px]" 
      loading="eager"
      fetchpriority="high"
      width={220} 
      format="webp"
      quality={80} 
    />
    
    <p class="text-apple text-3xl font-bold ">
      SÁBADO 18 <br /> OCTUBRE, 2025
    </p>
    <p class="text-white text-xl">Día Mundial de la Menopausia</p>
    <p class="text-lg text-white px-6">
      <strong class="text-apple">SEDE:</strong> <span class="font-bold">Museo Memoria y Tolerancia, CDMX.</span>
    </p>
    <div class="mt-12">
      <Button href="#registro" label="QUIERO ASISTIR" />
    </div>
  </div>
</section>
