---
import { Image } from "astro:assets";
import Button from "./Button.astro";
const sectionStyles = `landing-section bg-light-gray h-screen w-screen text-center overflow-hidden overflow-y-hidden relative bg-[url('/src/assets/hsi_bg.png')] bg-cover bg-center`;

import heroLogo from "../assets/hero-logo.png";
import heroLogoMobile from "../assets/hero-logo-mobile.png";
import heroWoman from "../assets/hero-woman.png";
---

<section class={sectionStyles} data-header-color={`light-gray`} id="inicio">
  <!-- Desktop Layout -->
  <div
    class="hidden lg:flex justify-between items-center h-full px-16 pt-32 z-30 relative"
  >
    <!-- Left content -->
    <div class="flex flex-col w-[50vw] items-start max-w-[50vw] space-y-6">
      <h2 class="text-black text-6xl font-black uppercase">
        <span class="text-7xl">F</span>oro 2025
      </h2>

      <h3
        class="flex flex-col items-start justify-start leading-8 font-thin text-6xl text-black"
      >
        <span>El desafío de las</span><br />
        <span>Infecciones</span><br />
        <span>Intrahospitalarias</span>
      </h3>

      <div
        class="bg-gradient-to-r from-gradient-start via-gradient-center to-gradient-end rounded-[20px] px-6 py-2 inline-block"
      >
        <p
          class="text-white font-extrabold uppercase text-4xl leading-tight tracking-wide text-left"
        >
          HACIA UNA POLÍTICA PÚBLICA
        </p>
        <p
          class="text-white font-extrabold uppercase text-4xl leading-tight tracking-wide text-left"
        >
          QUE IMPULSE LA PREVENCIÓN
        </p>
      </div>

      <!-- Texto y botón alineados -->
      <div class="flex items-start gap-4">
        <!-- Texto -->
        <div class="space-y-1 flex flex-col items-start">
          <p class="text-3xl tracking-wider font-bold text-black-text">
            25 Y 26 DE SEPTIEMBRE, 2025
          </p>
          <div class="flex flex-col items-start justify-start w-full">
            <p class="text-black text-2xl font-normal tracking-widest">
              Auditorio del <strong class="font-extrabold"
                >Hospital Médica Sur</strong
              >
            </p>
            <div
              class="h-1 w-full mt-1 rounded-full bg-gradient-to-r from-gradient-start via-gradient-center to-gradient-end"
            >
            </div>
          </div>
        </div>

        <!-- Botón alineado arriba -->
      </div>

      <!-- Sede -->
      <div class="pt-1">
        <Button href="#registro" label="QUIERO ASISTIR" />
      </div>
    </div>

    <!-- Right image -->
    <div class="absolute bottom-24 right-24 max-w-4xl md:w-[28vw] lg:w-[28vw] flex flex-col items-end gap-2">
      <Image
        src={heroLogoMobile}
        alt="Doctores"
        class="w-full object-contain"
        loading="eager"
        fetchpriority="high"
        widths={[400, 600, 800, 1024]}
        sizes="(max-width: 512px) 30vw, 40vw"
        format="webp"
      />
      <div class="flex flex-col items-end mt-4">
        <span class="px-4 py-1 rounded-full text-white font-semibold text-base shadow bg-gradient-to-r from-[#3bb3c3] to-[#6ec06b] mb-2">AVAL ACADÉMICO</span>
        <img src="/src/assets/MS_logotipo-horizontal.png" alt="Médica Sur" class="h-10 w-auto" />
      </div>
    </div>

    <div class="w-full flex justify-end absolute bottom-0 left-0 bg-[url('/src/assets/motivos_pattern.png')] bg-repeat-x bg-contain bg-bottom h-12">
        &nbsp;
    </div>
  </div>

  <!-- Mobile Layout -->
  <div
    class="lg:hidden flex flex-col items-center text-center px-6 pt-40 z-30 relative h-full"
  >
    <h2 class="text-black text-3xl font-black uppercase">
      <span class="text-4xl">F</span>oro 2025
    </h2>
     <Image
      src={heroLogoMobile}
      alt="Doctores"
      class="w-[200px]"
      loading="eager"
      fetchpriority="high"
      width={320}
      format="webp"
      quality={80}
    /> 

    <h3
        class="flex flex-col w-full items-\ justify-start leading-3 font-thin text-2xl text-black mt-3 mb-6"
      >
        <span>El desafío de las</span><br />
        <span>Infecciones</span><br />
        <span>Intrahospitalarias</span>
      </h3>

      <div
        class="bg-gradient-to-r from-gradient-start via-gradient-center to-gradient-end rounded-[20px] px-6 py-2 inline-block mb-3"
      >
        <p
          class="text-white font-extrabold uppercase text-xl leading-tight tracking-wide text-left"
        >
          HACIA UNA POLÍTICA PÚBLICA
        </p>
        <p
          class="text-white font-extrabold uppercase text-xl leading-tight tracking-wide text-left"
        >
          QUE IMPULSE LA PREVENCIÓN
        </p>
      </div>

    <p class="text-black text-3xl font-bold">
      25 Y 26 DE <br />SEPTIEMBRE, 2025
    </p>
    <div class="flex flex-col items-start justify-start w-full">
      <p class="flex w-full  flex-col text-black text-2xl text-center font-normal tracking-wide">
        Auditorio del <br/><strong class="font-extrabold">Hospital Médica Sur</strong
        >
      </p>
      <div
        class="h-1 w-full mt-1 rounded-full bg-gradient-to-r from-gradient-start via-gradient-center to-gradient-end"
      >
      </div>
    </div>

    <div class="mt-6">
      <Button href="#registro" label="QUIERO ASISTIR" />
    </div>
  </div>
</section>
