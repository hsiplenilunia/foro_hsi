---
import { Image } from 'astro:assets';
import logo_amein from '../../assets/patrocinadores/AMEIN.png';
import logo_ampe from '../../assets/patrocinadores/AMPE-Móvil.jpg';
import logo_asociacion from '../../assets/patrocinadores/AsociacionMexCalidadenSalud.jpg';
import logo_colegio from '../../assets/patrocinadores/ColegioNacionalQuim.png';
import logo_funsalud from '../../assets/patrocinadores/FUNSALUD.png';
import logo_growing from '../../assets/patrocinadores/Growing-Fundation-Versión-Móvil.png';
import logo_amimc from '../../assets/patrocinadores/LOGO-AMIMC.jpg';
import logo_mexypidn from '../../assets/patrocinadores/logo-mexYpidn.jpg';
import logo_rectangulo from '../../assets/patrocinadores/Rectangulo-Blanco-1.png';
import logo_sepsismx from '../../assets/patrocinadores/SepsisMX-Móvil.jpg';
import logo_somib from '../../assets/patrocinadores/Somib.png';
import logo_unursing from '../../assets/patrocinadores/U-nursign-Versión-Móvil.png';

const aliados = [
  { imgUrl: logo_amein, alt: 'AMEIN' },
  { imgUrl: logo_ampe, alt: 'AMPE' },
  { imgUrl: logo_asociacion, alt: 'Asociación Mexicana de Calidad en Salud' },
  { imgUrl: logo_colegio, alt: 'Colegio Nacional Quím.' },
  { imgUrl: logo_funsalud, alt: 'FUNSALUD' },
  { imgUrl: logo_growing, alt: 'Growing Fundation' },
  { imgUrl: logo_amimc, alt: 'AMIMC' },
  { imgUrl: logo_mexypidn, alt: 'MexYpidn' },
  //{ imgUrl: logo_rectangulo, alt: 'Rectángulo Blanco' },
  { imgUrl: logo_sepsismx, alt: 'SepsisMX' },
  { imgUrl: logo_somib, alt: 'Somib' },
  { imgUrl: logo_unursing, alt: 'U-nursing' },
];

const patrocinadores = [
  
  
];



const sectionStyles = `landing-section bg-white min-h-screen w-screen flex flex-col items-center justify-center pt-24 px-8 relative overflow-y-hidden pb-8 md:pb-0`;
---

<!-- <section aria-labelledby="speakers-title" class="py-16 bg-purple"> -->
<section
  class={sectionStyles}
  data-header-color={`white`}
  id='aliados'
>
  {aliados.length > 0 && (
    <div class="container mx-auto px-4">
      <h2 id="speakers-title" class="text-celeste-hsi text-4xl font-bold text-center mb-8">
        ALIADOS
      </h2>

      <div
        class="grid gap-1 grid-cols-1 sm:grid-cols-2 md:grid-cols-4 2xl:grid-cols-6"
      >
        {aliados.map((aliado) => (
          <div class="flex w-full min-h-[162px] max-h-[162px]  items-center justify-center">
            <Image 
              src={aliado.imgUrl}
              alt={aliado.alt || 'Aliado'} 
              class="object-contain w-full h-full rounded-md" 
              loading="lazy"
              width={320}
              height={162}
            />
          </div>
        ))}
      </div>
    </div>
  )}

  {patrocinadores.length > 0 && (
    <div class="container mx-auto mt-12 px-0 md:px-24">
      <h2 id="speakers-title" class="text-navy text-4xl font-bold text-center mb-8 uppercase">
        patrocinadores
      </h2>

      <div
        class="grid gap-1 grid-cols-1 sm:grid-cols-2 md:grid-cols-4 2xl:grid-cols-4"
      >
        {patrocinadores.map((aliado) => (
          <div class="flex w-full min-h-[162px] max-h-[162px] ">
              <Image 
              src={aliado.imgUrl}
              alt={aliado.alt || 'Aliado'} 
              class="object-contain w-full h-full rounded-md" 
              loading="lazy"
              width={320}
              height={162}
            />
          </div>
        ))}
      </div>
    </div>
  )}
</section>
