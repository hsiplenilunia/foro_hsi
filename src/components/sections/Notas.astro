---
import SpeakerOrganicBg from "../atoms/SpeakerOrganicBg.astro";
import NotasCard from "../molecules/NotasCard.astro";

import prensa_01 from '../../assets/notas/prensa_01.png';
import prensa_02 from '../../assets/notas/prensa_02.png';
import prensa_03 from '../../assets/notas/prensa_03.png';
import prensa_04 from '../../assets/notas/prensa_04.png';
import prensa_05 from '../../assets/notas/prensa_05.png';

// Define type for card variants
interface CardData {
  // State 1
  imageSrc: string | ImageMetadata;
  imageAlt: string;
  // State 2
  title: string;
  underlinedText: string;
  link?: string; // Optional link for more info
}

const cardData: CardData[] = [
  {
    title: "MÁS DE 40 SÍNTOMAS QUE AFECTAN LA CALIDAD DE VIDA DE LAS MUJERES",
    underlinedText:"Mujer Infoma",
    imageSrc: prensa_01,
    imageAlt: "MÁS DE 40 SÍNTOMAS QUE AFECTAN LA CALIDAD DE VIDA DE LAS MUJERES - Mujer Infoma"
  },
  {
    title: "INDISPENSABLE VISIBILIZAR MENOPAUSIA PARA AVANZAR EN AGENDA DE SALUD",
    underlinedText:"Agencia Quartín México",
    imageSrc: prensa_02,
    imageAlt: "INDISPENSABLE VISIBILIZAR MENOPAUSIA PARA AVANZAR EN AGENDA DE SALUD - Agencia Quartín México"
  },
  {
    title: "CLIMATERIO Y MENOPAUSIA, RETO PARA MUJERES",
    underlinedText:"Revista Factor RH+",
    imageSrc: prensa_03,
    imageAlt: "CLIMATERIO Y MENOPAUSIA, RETO PARA MUJERES - Revista Factor RH+"
  },
  {
    title: "PARA AVANZAR EN UNA AGENDA DE SALUD PÚBLICA, HAY QUE VISIBILIZAR LA MENOPAUSIA",
    underlinedText:"La Crónica",
    imageSrc: prensa_05,
    imageAlt: "PARA AVANZAR EN UNA AGENDA DE SALUD PÚBLICA, HAY QUE VISIBILIZAR LA MENOPAUSIA - La Crónica"
  },
  {
    title: "INDISPENSABLE VISIBILIZAR EL TEMA DE LA MENOPAUSIA PARA AVANZAR EN LA AGENDA DE SALUD PÚBLICA",
    underlinedText:"Observatorio Informativo",
    imageSrc: prensa_04,
    imageAlt: "INDISPENSABLE VISIBILIZAR EL TEMA DE LA MENOPAUSIA PARA AVANZAR EN LA AGENDA DE SALUD PÚBLICA - Observatorio Informativo"
  },
];
const sectionStyles = `landing-section bg-guacamole min-h-screen w-screen flex items-center justify-center pt-24 px-4 relative overflow-y-hidden`;
---

<section
  class={sectionStyles}
  data-header-color={`guacamole`}
  id='notas'
>
  <div class="container mx-auto px-0">
    <h2 id="speakers-title" class="text-purple text-4xl font-bold text-center mb-8 uppercase">
      presencia en medios
    </h2>

    <div
      class="grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4"
    >
      {cardData.map((card) => (
        <NotasCard
          {...card}
        />
      ))}
    </div>
  </div>
</section>
