    }

    .hsi-agenda__day {
        display: none;
    }

    .hsi-agenda__day--active {
        display: block;
    }

    .hsi-agenda__event {
        font-family: var(--hsi-font) !important;
        border-left: 4px solid var(--hsi-color-sky);
        background-color: #f9fbfc;
        margin-bottom: 1rem;
        padding: 0.75rem;
        border-radius: 4px;
    }

    .hsi-agenda__toggle {
        font-family: var(--hsi-font) !important;
        background: none;
        border: none;
        width: 100%;
        text-align: left;
        cursor: pointer;
        padding: 0;
    }

    .hsi-agenda__time {
        display: block;
        font-weight: bold;
        color: var(--hsi-color-navy);
        font-size: 2.5rem;
    }

    .hsi-agenda__event-title {
        font-family: var(--hsi-font) !important;
        font-size: 2.1rem;
        margin: 0.25rem 0;
        color: var(--hsi-color-navy);
    }

    .hsi-agenda__panel {
        padding-top: 0.5rem;
    }

    .hsi-agenda__desc {
        font-family: var(--hsi-font) !important;
        font-size: 1.5rem;
        margin: 0;
        line-height: 1.5;
    }

    /* Responsive: solo Tabs visibles en tablet o mayor */
    @media (min-width: 768px) {
        .hsi-agenda__toggle {
            pointer-events: none;
        }

        .hsi-agenda__panel {
            display: block !important;
            padding-top: 0;
        }
    }
</style>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const tabs = document.querySelectorAll(".hsi-agenda__tab");
        const days = document.querySelectorAll(".hsi-agenda__day");

        tabs.forEach((tab, index) => {
            tab.addEventListener("click", () => {
                tabs.forEach((t, i) => {
                    t.classList.remove("hsi-agenda__tab--active");
                    t.setAttribute("aria-selected", "false");
                });
                days.forEach((d) =>
                    d.classList.remove("hsi-agenda__day--active")
                );
                tabs[index].classList.add("hsi-agenda__tab--active");
                tabs[index].setAttribute("aria-selected", "true");
                days[index].classList.add("hsi-agenda__day--active");
            });
        });

        const toggles = document.querySelectorAll(".hsi-agenda__toggle");

        toggles.forEach((toggle) => {
            toggle.addEventListener("click", () => {
                const panelId = toggle.getAttribute("aria-controls");
                const panel = document.getElementById(panelId);
                const isExpanded = toggle.getAttribute("aria-expanded") === "true";

                toggle.setAttribute("aria-expanded", String(!isExpanded));
                panel.hidden = isExpanded;
            });
        });
    });
</script>
