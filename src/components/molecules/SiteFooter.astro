---
// No scripts needed for this static footer
---

<footer 
  class="bg-purple h-[180px] md:h-[73px] w-full flex items-center justify-center px-4 sm:px-6 lg:px-8 pt-2"
  role="contentinfo"
  aria-label="Información de contacto"
  id="contacto"
>
  <div class="container mx-auto max-w-7xl">
    <div class="flex flex-col sm:flex-row items-center justify-center gap-2 sm:gap-6 md:gap-8 lg:gap-12">
      <!-- Email Contact -->
      <div class="flex flex-col md:flex-row items-center">
        <span class="text-light-text text-base sm:text-sm md:text-base font-bold">
          CONTACTO:
        </span>
        <a 
          href="mailto:foro.menopausia@plenilunia.com"
          class="ml-2 text-light-text text-lg sm:text-sm md:text-base font-bold hover:text-apple transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-apple focus:ring-opacity-50 rounded-sm"
          aria-label="Enviar correo electrónico a foro.menopausia@plenilunia.com"
          title="Enviar correo electrónico"
        >
          foro.menopausia@plenilunia.com
        </a>
      </div>

      <!-- WhatsApp Contact -->
      <div class="flex flex-col sm:flex-row items-center">
        <span class="text-light-text text-lg sm:text-sm md:text-base font-bold">
          WHATSAPP:
        </span>
        <a 
          href="https://wa.me/525563654094"
          target="_blank"
          rel="noopener noreferrer"
          class="ml-2 text-light-text text-lg sm:text-sm md:text-base font-bold hover:text-apple transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-apple focus:ring-opacity-50 rounded-sm"
          aria-label="Abrir WhatsApp para contactar al +52 55 6365 4094"
          title="Contactar por WhatsApp"
        >
          +52 55 6365 4094
        </a>
      </div>
    </div>
  </div>
</footer>